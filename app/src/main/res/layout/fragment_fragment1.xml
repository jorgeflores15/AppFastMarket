<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.yonny.app1.Fragment1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:id="@+id/cardvi"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:focusable="true"
        android:clickable="true"
     >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bienvenida"
            android:padding="16dp">


            <TextView
                android:id="@+id/bienvenid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#fff"
                android:textSize="30sp"
                android:text="Hola Yonny"/>


        </RelativeLayout>
        <Button
            android:id="@+id/eliminar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/clear"
            android:backgroundTint="#00303030"
            android:layout_gravity="right"
            android:layout_margin="1dp"
            />

    </android.support.v7.widget.CardView>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yonny.app1.Fragment1">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view"
            />
    </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</FrameLayout>

