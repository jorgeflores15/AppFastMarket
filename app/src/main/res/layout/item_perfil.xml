<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_margin"
    android:layout_marginLeft="@dimen/activity_margin"
    android:layout_marginEnd="@dimen/activity_margin"
    android:layout_marginRight="@dimen/activity_margin"
    android:layout_marginTop="@dimen/activity_margin"
    app:cardElevation="10dp"
    android:clickable="true"
    android:id="@+id/detalle"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/all_cardview_border">

        <RelativeLayout
            android:id="@+id/payment_label"
            android:layout_width="@dimen/card_label_width"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="#cf666b"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal"
            android:padding="@dimen/activity_margin">
                <ImageView
                    android:id="@+id/foto_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">
                        <TextView
                            android:id="@+id/fullname_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/foto_image"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="Nombre del producto"/>

                        <TextView
                            android:id="@+id/precio_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/foto_image"
                            android:layout_below="@+id/nombre_text"
                            android:layout_marginBottom="8dp"
                            android:textSize="16sp"
                            android:text="S/. 200.00"/>

                </LinearLayout>





        </LinearLayout>
        <Button
            android:id="@+id/eliminar"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/clear"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            />

</android.support.v7.widget.CardView>

