<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <Button
            android:id="@+id/atras"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/arrow_atras"
            android:backgroundTint="#111"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/agregaracarrito"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/carritocompra"
            android:layout_gravity="right"
            android:layout_marginTop="18dp"
            android:layout_marginRight="26dp"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="568dp">

            <ImageView
                android:id="@+id/foto_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/nombre_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foto_image"
                android:padding="16dp"
                android:textColor="#737373"

                android:text="Nombre del Producto"
                android:textSize="20sp"
             />

            <TextView
                android:id="@+id/codigoProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre_text"
                android:paddingEnd="16dp"
                android:textColor="#847f7f"
                android:paddingStart="16dp"
                android:layout_marginBottom="2dp"
                android:text="Codigo de producto: 2407306"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/precio_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/codigoProducto"
                android:padding="16dp"
                android:textColor="#ff0000"
                android:text="S/. 200.00"
                android:layout_marginBottom="15dp"
                android:textSize="22sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/detalles_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/precio_text"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:layout_marginBottom="29dp"
                android:text="Intel Core i7 es una familia de procesadores 4 nÃºcleos de la arquitectura Intel x86-64, lanzados al comercio en 2008."
                android:textSize="16sp"/>


            <Button
                android:id="@+id/enviarcarito"
                android:layout_width="189dp"
                android:onClick="enviar"
                android:layout_height="39dp"
                android:padding="6dp"
                android:textColor="#ffffff"
                android:background="#ff0000"
                android:text="Agregar al carrito"
                android:layout_below="@+id/detalles_text"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</ScrollView>
